height = float(input("Введіть зріст у метрах: "))
weight = float(input("Введіть масу у кілограмах: "))

bmi = weight / (height * height)

if bmi < 18.5:
    print(f"Your body mass index is: {bmi:.2f} , that is underweight.")
elif 18.5 <= bmi <= 24.9:
    print(f"Your body mass index is: {bmi:.2f} , that is normal weight.")
else:
    print(f"Your body mass index is: {bmi:.2f} , that is overweight.")
